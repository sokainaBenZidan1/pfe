<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="mandat">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="date_debut" type="TIMESTAMP"/>
        <column name="date_fin" type="TIMESTAMP"/>

        <column name="employe_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="responsabilite_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="entite_admin_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="mandat"
              baseColumnNames="employe_id"
              referencedTableName="employe"
              referencedColumnNames="id"
              constraintName="fk_mandat_employe"/>
      <addForeignKeyConstraint
              baseTableName="mandat"
              baseColumnNames="responsabilite_id"
              referencedTableName="responsabilite"
              referencedColumnNames="id"
              constraintName="fk_mandat_responsabilite"/>
      <addForeignKeyConstraint
              baseTableName="mandat"
              baseColumnNames="entite_admin_id"
              referencedTableName="entite_admin"
              referencedColumnNames="id"
              constraintName="fk_mandat_entite_admin"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="mandat_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/mandat/Mandat.csv"
            tableName="mandat">
      <column name="id" type="NUMERIC"/>
          <column name="date_debut" type="TIMESTAMP"/>
          <column name="date_fin" type="TIMESTAMP"/>
        <column name="employe" type="BIGINT"/>
        <column name="responsabilite" type="BIGINT"/>
        <column name="entite_admin" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
